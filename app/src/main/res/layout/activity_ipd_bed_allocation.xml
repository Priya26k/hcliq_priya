<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMain">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorLightBackground"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From Date"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:editable="false"
                    android:background="@color/colorWhite"
                    android:padding="5dp"
                    android:drawableEnd="@drawable/ic_date_range_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To Date"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:editable="false"
                    android:background="@color/colorWhite"
                    android:padding="5dp"
                    android:drawableEnd="@drawable/ic_date_range_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_ward_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ward No"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_Ward_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:hint="Enter Ward no."
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_bed_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bed No"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_Bed_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:hint="Enter Bed no."
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_facility_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Facility Name"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edit_facility_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:hint="Facility Name here"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
